<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    tools:context=".MainActivity"
    android:orientation="horizontal"
    android:background="#F5F1D8"
    android:id="@+id/relativ"
    >



    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:padding="23dp"
        android:textSize="15dp"
        android:id="@+id/uno"
        android:hint="100"
        android:maxLength="3"
        android:textStyle="bold"
        android:layout_below="@+id/participante"

        />

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="23dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:id="@+id/dos"
        android:hint="100"
        android:layout_below="@+id/uno"
        android:maxLength="3"
        android:textStyle="bold"


        />

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="23dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:id="@+id/tres"
        android:hint="100"
        android:layout_below="@+id/uno"
        android:layout_toRightOf="@id/dos"
        android:maxLength="3"
        android:textStyle="bold"


        />

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="23dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:id="@+id/cuatro"
        android:hint="100"
        android:layout_toRightOf="@id/uno"
        android:maxLength="3"
        android:textStyle="bold"
        android:layout_below="@+id/participante"


        />

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="23dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:id="@+id/cinco"
        android:hint="100"
        android:layout_toRightOf="@id/cuatro"
        android:maxLength="3"
        android:textStyle="bold"
        android:layout_below="@+id/participante"


        />

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="23dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:id="@+id/seis"
        android:hint="100"
        android:layout_toRightOf="@id/cinco"
        android:maxLength="3"
        android:textStyle="bold"
        android:layout_below="@+id/participante"


        />

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="23dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:id="@+id/siete"
        android:hint="100"
        android:layout_toRightOf="@id/seis"
        android:maxLength="3"
        android:textStyle="bold"
        android:layout_below="@+id/participante"


        />

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="23dp"
        android:textSize="15dp"
        android:textAlignment="gravity"
        android:layout_margin="3dp"
        android:id="@+id/ocho"
        android:hint="100"
        android:layout_below="@id/cuatro"
        android:layout_toRightOf="@id/tres"
        android:maxLength="3"
        android:textStyle="bold"

        />

    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="23dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:id="@+id/nueve"
        android:hint="100"
        android:layout_below="@id/cuatro"
        android:layout_toRightOf="@id/ocho"
        android:maxLength="3"
        android:textStyle="bold"


        />
    <EditText xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:padding="23dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_margin="3dp"
        android:id="@+id/diez"
        android:hint="100"
        android:layout_below="@id/cuatro"
        android:layout_toRightOf="@id/nueve"
        android:maxLength="3"
        android:textStyle="bold"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Resultado"
        android:id="@+id/Resss"
        android:textSize="25dp"

        android:layout_below="@+id/diez"
        />


</RelativeLayout>
